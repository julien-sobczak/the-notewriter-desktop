{
  "name": "the-notewriter-desktop",
  "version": "0.1.0",
  "description": "Be creative with your notes",
  "keywords": [
    "note-taking"
  ],
  "homepage": "https://github.com/julien-sobczak/the-notewriter-desktop#readme",
  "bugs": {
    "url": "https://github.com/julien-sobczak/the-notewriter-desktop/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/julien-sobczak/the-notewriter-desktop.git"
  },
  "license": "MIT",
  "author": {
    "name": "Julien Sobczak",
    "url": "https://github.com/julien-sobczak"
  },
  "main": "./out/main/index.js",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "env NT_SKIP_DAILY_QUOTE=true NT_HOME=$PWD/fixtures electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux",
    "test": "jest",
    "cloc": "gocloc --match-d='^src' --not-match-d='node_modules' --exclude-ext='json' .",
    "fixtures": "./fixtures/build.sh $PWD/fixtures"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@phosphor-icons/react": "^2.1.10",
    "classnames": "^2.5.1",
    "cmdk": "^1.1.1",
    "js-yaml": "^4.1.0",
    "react-accessible-treeview": "^2.11.2",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.9.4",
    "react-syntax-highlighter": "^15.6.6",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "sqlite3": "^5.1.7",
    "use-immer": "^0.11.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.18.6",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "electron": "^38.1.2",
    "electron-builder": "^25.1.8",
    "electron-vite": "^4.0.1",
    "eslint": "^9.36.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.6"
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "json"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/.erb/mocks/fileMock.js",
      "\\.(css|less|sass|scss)$": "identity-obj-proxy"
    },
    "setupFiles": [
      "./.erb/scripts/check-build-exists.ts"
    ],
    "testEnvironment": "jsdom",
    "testEnvironmentOptions": {
      "url": "http://localhost/"
    },
    "testPathIgnorePatterns": [
      "release/app/dist",
      ".erb/dll"
    ],
    "transform": {
      "\\.(ts|tsx|js|jsx)$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!yaml)"
    ]
  }
}
